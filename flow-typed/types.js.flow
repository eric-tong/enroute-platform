// @flow

import { DateTime } from "luxon";

declare type AVL = {|
  id: number,
  priority: string,
  timestamp: number,
  altitude: number,
  longitude: number,
  latitude: number,
  angle: number,
  satellites: number,
  speed: number,
  vehicleId: number
|};

declare type BusStop = {|
  id: number,
  name: string,
  street: string,
  icon: string,
  url: string,
  direction: string,
  latitude: number,
  longitude: number,
  roadAngle: ?number,
  isTerminal: boolean
|};

declare type Department = {|
  id: number,
  name: string,
  type: string
|};

declare type Departure = {|
  scheduled: string,
  predicted: string,
  tripId: number,
  busStopId: number
|};

declare type ScheduledDeparture = {|
  minuteOfDay: number,
  tripId: number,
  busStopId: number
|};

declare type IO = {|
  name: string,
  value: number
|};

declare type NonTerminalStatus = {|
  isInTerminal: false,
  tripId: number,
  tripIdConfidence: number,
  currentBusStopId: ?number,
  busStopsVisited: number[],
  predictedArrivals: BusArrival[],
  avl: AVL
|};
declare type Status =
  | {
      isInTerminal: true
    }
  | NonTerminalStatus;

declare type BusArrival = {
  tripId: number,
  busStopId: number,
  busStopName: string,
  dateTime: DateTime
};

declare type Vehicle = {|
  id: number,
  registration: string,
  imei: string
|};
