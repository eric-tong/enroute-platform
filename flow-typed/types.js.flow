// @flow

import { DateTime } from "luxon";

declare type AVL = {|
  id: number,
  priority: "low" | "high" | "panic",
  timestamp: string,
  altitude: number,
  longitude: number,
  latitude: number,
  angle: number,
  satellites: number,
  speed: number,
  vehicleId: number
|};

declare type BusArrival = {
  scheduledDepartureId: number,
  tripId: number,
  busStopId: number,
  busStopName: string,
  dateTime: DateTime
};

declare type BusStop = {|
  id: number,
  name: string,
  street: string,
  icon: string,
  url: string,
  direction: string,
  latitude: number,
  longitude: number,
  roadAngle: ?number,
  isTerminal: boolean
|};

declare type BusStopVisit = {|
  avlId: number,
  busStopId: number,
  scheduledDepartureId: ?number,
  isProxy: boolean
|};

declare type CheckIn = {|
  id: number,
  timestamp: string,
  vehicleId: number,
  departmentId: number
|};

declare type Department = {|
  id: number,
  name: string,
  type: string
|};

declare type Departure = {|
  scheduledDeparture: ScheduledDeparture,
  predictedDeparture: ?PredictedDeparture,
  actualDeparture: ?AVL,
  status: DepartureStatus
|};

declare type DepartureStatus =
  | "arriving"
  | "now"
  | "departed"
  | "skipped"
  | "unknown";

declare type IO = {|
  name: string,
  value: number
|};

declare type NonTerminalStatus = {|
  isInTerminal: false,
  tripId: number,
  currentBusStopId: ?number,
  busStopsVisited: number[],
  predictedArrivals: BusArrival[],
  avl: AVL
|};

declare type PredictedDeparture = {|
  id: number,
  scheduledDepartureId: number,
  avlId: number,
  predictedTimestamp: string
|};

declare type ScheduledDeparture = {|
  id: number,
  minuteOfDay: number,
  tripId: number,
  busStopId: number
|};

declare type Status =
  | {
      isInTerminal: true
    }
  | NonTerminalStatus;

declare type Vehicle = {|
  id: number,
  registration: string,
  imei: string,
  phone: string
|};
